{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2023",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "paths": {
      "~modules/*": ["src/modules/*"],
      "~shared/*": ["src/shared/*"],
      "~core/*": ["src/core/*"],
      "~lib/*": ["src/lib/*"]
    },
    "incremental": true,
    "skipLibCheck": true,
    "strict": true
  }
}
